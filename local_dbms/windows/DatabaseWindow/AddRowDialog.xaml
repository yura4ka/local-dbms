<Window x:Class="local_dbms.windows.DatabaseWindow.AddRowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:local_dbms.windows.DatabaseWindow"
        mc:Ignorable="d"
        Title="Add Row"
        MinHeight="300"
        MinWidth="450"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <StackPanel>
        <ItemsControl x:Name="InputFields" Margin="10"/>
        <Button Content="Add" Click="Add_Click" HorizontalAlignment="Right" Margin="10" Padding="20 0"/>
    </StackPanel>
</Window>
